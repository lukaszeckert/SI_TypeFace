package com.sample
 
import com.sample.DroolsTest.Message;
import javax.swing.*;

rule "Hello World"
    when
        m : Message( status == Message.HELLO, myMessage : message )
    then
        System.out.println( myMessage );
        m.setMessage( "Goodbye cruel world" );
        m.setStatus( Message.GOODBYE );
        update( m );
end

rule "GoodBye"
    when
        Message( status == Message.GOODBYE, myMessage : message )
    then
        System.out.println( myMessage );
end

rule "Int"
	when
	then
		insert(new QuestionAnswer(new Question("",null,null),new QuestionOption("")));
end



rule "Question Name"
	when 
		QuestionAnswer(question.question == "czy ala ma kota", answer.option == "ala")
	then 
		insert(new Question("czy ala ma kota",new QuestionOption("tak"),new QuestionOption("nie")));
end  


            rule "Question Why you need typeface?"
                when 
                    QuestionAnswer(question.question == "", answer.option == "")
                then 
                    insert(new Question("Why you need typeface?",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question We all like something very condensed, YES?"
                when 
                    QuestionAnswer(question.question == "Why you need typeface?", answer.option == "YES")
                then 
                    insert(new Question("We all like something very condensed, YES?",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question Univers"
                when 
                    QuestionAnswer(question.question == "We all like something very condensed, YES?", answer.option == "YES")
                then 
                    insert(new Question("Univers",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question GOT A LOT OF TABLES, HAVE YOU?"
                when 
                    QuestionAnswer(question.question == "We all like something very condensed, YES?", answer.option == "NO")
                then 
                    insert(new Question("GOT A LOT OF TABLES, HAVE YOU?",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question Letter Gothic"
                when 
                    QuestionAnswer(question.question == "GOT A LOT OF TABLES, HAVE YOU?", answer.option == "YES")
                then 
                    insert(new Question("Letter Gothic",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question YOU CIRED WHEN WATICHING TERMINATOR"
                when 
                    QuestionAnswer(question.question == "GOT A LOT OF TABLES, HAVE YOU?", answer.option == "NO")
                then 
                    insert(new Question("YOU CIRED WHEN WATICHING TERMINATOR",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question OCR"
                when 
                    QuestionAnswer(question.question == "YOU CIRED WHEN WATICHING TERMINATOR", answer.option == "YES")
                then 
                    insert(new Question("OCR",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question I MUST SAY TKAT THIS FLOWCHART IS LOOKING HOT"
                when 
                    QuestionAnswer(question.question == "YOU CIRED WHEN WATICHING TERMINATOR", answer.option == "NO")
                then 
                    insert(new Question("I MUST SAY TKAT THIS FLOWCHART IS LOOKING HOT",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  

            

            rule "Question FF DIN"
                when 
                    QuestionAnswer(question.question == "I MUST SAY TKAT THIS FLOWCHART IS LOOKING HOT", answer.option == "YES")
                then 
                    insert(new Question("FF DIN",new QuestionOption("Logo"),new QuestionOption("Invitation")));
            end  
